{
  "extends": "@architecture-components/typescript-config",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable", "es2016", "es2017", "es2018.promise", "ESNext"],
    "types": ["jest", "node", "cypress", "@testing-library/cypress"],
    "baseUrl": ".",
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["packages/**/*", "typings.d.ts", "packages/shell/global.d.ts"]
}
