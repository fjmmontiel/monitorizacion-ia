{
  "extends": ["@architecture-components/eslint-config", "plugin:cypress/recommended"],
  "ignorePatterns": ["**/node_modules/**", "lib/**", "build/**", "coverage/**"],
  "overrides": [
    {
      "files": ["src/**/*.ts", "src/**/*.tsx"],
      "excludedFiles": ["src/shared/api/MonitorApi.ts"],
      "rules": {
        "no-restricted-globals": [
          "error",
          {
            "name": "fetch",
            "message": "Usa MonitorApi para las llamadas HTTP del flujo monitor."
          }
        ],
        "no-restricted-imports": [
          "error",
          {
            "patterns": ["axios", "@internal-channels-components/http"]
          }
        ]
      }
    },
    {
      "files": ["cypress/**/*.ts", "cypress/**/*.tsx"],
      "rules": {
        "testing-library/prefer-screen-queries": "off",
        "testing-library/await-async-query": "off"
      }
    }
  ]
}
