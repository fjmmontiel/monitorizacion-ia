{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "DashboardResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["table"],
  "properties": {
    "table": {
      "type": "object",
      "additionalProperties": false,
      "required": ["columns", "rows"],
      "properties": {
        "columns": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["key", "label"],
            "properties": {
              "key": {"type": "string"},
              "label": {"type": "string"},
              "filterable": {"type": ["boolean", "null"]},
              "sortable": {"type": ["boolean", "null"]}
            }
          }
        },
        "rows": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "detail"],
            "properties": {
              "id": {"type": "string"},
              "detail": {
                "type": "object",
                "additionalProperties": false,
                "required": ["action"],
                "properties": {
                  "action": {"type": "string"}
                }
              }
            },
            "additionalProperties": true
          }
        },
        "nextCursor": {"type": ["string", "null"]}
      }
    }
  }
}
