{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "CardsResponse",
  "type": "object",
  "required": ["schema_version", "cards"],
  "properties": {
    "schema_version": {"type": "string", "const": "v1"},
    "cards": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "value"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "value": {}
        }
      }
    }
  }
}
