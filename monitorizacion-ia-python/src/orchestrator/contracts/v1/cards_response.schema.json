{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "CardsResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["cards"],
  "properties": {
    "cards": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "value"],
        "properties": {
          "title": {"type": "string"},
          "subtitle": {"type": ["string", "null"]},
          "value": {"type": ["string", "number"]},
          "format": {
            "type": ["string", "null"],
            "enum": ["seconds", "percent", "currencyEUR", "int", "float", null]
          }
        }
      }
    }
  }
}
